{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // The snippet below is to ensure Vue Typescript support
    // -Sam
    "types": ["vue"], 
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true
  }
}
